using System;

namespace Project
{

    class Names
    {
        static void Main()
        {
            try
            {
            var userInput = GetUserInput();
            string parsedInput = ValidateInput(userInput);
            var trimedValue = Trim(parsedInput);
            // DisplayResult(trimedValue);
            }
            catch
            {
                
            }
        }

        private static string? GetUserInput()
        {
            Console.Write("Enter the names separated by commas:");
            return Console.ReadLine();
        }

        private static string ValidateInput(string? validateInput)
        {
            if (string.IsNullOrEmpty(validateInput))
            {
                throw new ArgumentException("input is empty!");
            }
            return validateInput;
        }

        private static string Trim(string inputWithoutEmptySpaces)
        {
            string[] names = inputWithoutEmptySpaces.Split(new char[] { ',' });
            for (int i = 0; i < names.Length; i++)
            {
                names[i] = names[i].Trim(new char[] {' '});
                for (int j = i + 1; j < names.Length-1; j++)
                {
                names[j] = names[j].Trim(new char[] {' '});
                int result = string.Compare(names[i], names[j]);
                if (result < 0)
                {
                    
                    // Console.WriteLine(names[i]+names[i+1]);
                }
                else if (result > 0)
                {
                    var storage = names[i];
                    names[i] = names[j];
                    names[j] = storage;
                    // Console.WriteLine(names[i]+names[i+1]);
                }
                else
                {
                    // Console.WriteLine(names[i]+names[i+1]); 
                }
                }
            }
                foreach (string c in names)
                {
                    Console.Write("  "+c+"  ");
                }
                return names[0];
        }
            
        

        // private static void DisplayResult(string? names)
        // {
        //     Console.WriteLine("Полученный результат: {0}", names);
        //     // Console.ReadKey();
        // }
    }
}
