using System;

namespace Project
{
    class Names
    {
        static void Main()
        {
            try
            {
                var userInput = GetUserInput();
                string validateInput = ValidateInput(userInput);
                var sortValue = Sort(validateInput);
                DisplayResult(sortValue);
            }
            catch (Exception ex)
            {
                DisplayError(ex);
            }
        }

        private static string? GetUserInput()
        {
            Console.Write("Enter the names separated by commas:");
                return Console.ReadLine();
        }

        private static string ValidateInput(string? validateInput)
        {
            if (string.IsNullOrEmpty(validateInput))
            {
                throw new ArgumentException("input is empty!");
            }
            return validateInput;
        }

        private static string Sort(string validateInput)
        {
            string[] names = validateInput.Split(new char[] { ',' });
            
            for (int i = 0; i < names.Length; i++)
            {
                names[i] = names[i].Trim(new char[] {' '});
                
                for (int j = 0; j < names.Length; j++)
                {
                    names[j] = names[j].Trim(new char[] {' '});
                    int result = string.Compare(names[i], names[j]);
                    
                    if (result < 0)
                    {
                        var storage = names[i];
                        names[i] = names[j];
                        names[j] = storage;
                    }
                    
                    else if (result > 0)
                    {
                        
                    }

                    else
                    {

                    }
                    findIncorrectValue(names);
                }
            }
                
                string sortValues = string.Join(", ", names);
                return sortValues;
        }

        private static void findIncorrectValue(string[] inValue)
        {
            for (int k = 0 ; k < inValue.Length; k++)
                    {
                        if (int.TryParse(inValue[k], out int number))
                        {
                            Console.WriteLine("You intered the number {0}", number);
                            throw new ArgumentException ("input has an integer value!");
                        }

                        if (inValue[k] == string.Empty)
                        {
                            Console.WriteLine("written white space field");
                            throw new ArgumentException ("input has a null value!");
                        }
                    }
                
        }
        private static void DisplayError(Exception ex)
        {
            Console.ForegroundColor = ConsoleColor.DarkRed;
            Console.WriteLine(ex.Message);
            Console.ResetColor();
        }

        private static void DisplayResult(string? names)
        {
            Console.WriteLine("Names sorted in order: {0}", names);
        }
    }
}
